<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginHorizontal="2dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_frame"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/preview_widget_frame"
        android:foreground="@drawable/fg_photo_frame_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeRound.Item"
        tools:src="@color/default_color_primary" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/preview_widget_frame"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_frame"
        app:layout_constraintLeft_toLeftOf="@id/iv_frame"
        app:layout_constraintRight_toRightOf="@id/iv_frame"
        app:layout_constraintTop_toTopOf="@id/iv_frame"
        tools:src="@drawable/ic_round_block_24"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
