<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.PhotoWidget.AppWidgetContainer">

    <AdapterViewFlipper
        android:id="@+id/vf_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoStart="true"
        android:flipInterval="5000" />

    <include
        android:id="@+id/photo_widget_info"
        layout="@layout/photo_widget_info" />
</FrameLayout>