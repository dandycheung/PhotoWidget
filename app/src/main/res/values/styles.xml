<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeRound">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeRound.Item">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeRound.WallpaperBackground">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ViewFlipperStyle">
        <item name="android:inAnimation">@animator/anim_view_flipper_in</item>
        <item name="android:outAnimation">@animator/anim_view_flipper_out</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <!--<item name="backgroundTint">@color/bottom_sheet_background</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CardView.WidgetItem">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CardView.MainTip">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardView.AppItem">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardView.About">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/selection_card_background</item>
    </style>

    <style name="CardView.SliderSelection">
        <item name="cardCornerRadius">@dimen/card_radius_small</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/selection_card_background</item>
    </style>

    <style name="CardView.TextSelection">
        <item name="cardCornerRadius">@dimen/card_radius_small</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/selection_card_background</item>
    </style>

    <style name="CardView.WidgetLink">
        <item name="cardCornerRadius">@dimen/card_radius_small</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/selection_card_background</item>
    </style>

    <style name="CardView.WidgetSetting">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/selection_card_background</item>
    </style>

    <style name="Chip.About" parent="Widget.Material3.Chip.Assist">
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/purple_7F63C3</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <style name="Widget.PhotoWidget.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
</resources>